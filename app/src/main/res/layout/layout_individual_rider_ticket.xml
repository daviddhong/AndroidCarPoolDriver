<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relative_layout_ic_back_activity_confirm"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <RelativeLayout
                android:id="@+id/backButtonOniTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/back_confirm"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="#383838" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_name"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/relative_layout_ic_back_activity_confirm"
            android:background="@drawable/border_top">

            <RelativeLayout
                android:id="@+id/name_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22.3dp">

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textColorHint="#383838"
                    android:textSize="22.8sp"
                    android:textStyle="bold"
                    android:textColor="#383838"
                    app:fontFamily="@font/roboto_bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/confirm_carpool"
                android:layout_width="158.8dp"
                android:layout_height="38.8dp"
                android:background="@drawable/background_rectangle_blue_border"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/confirm_carpool_button_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Request to carpool"
                    android:textColor="#416DF4"
                    android:textSize="12.8sp"
                    app:fontFamily="@font/roboto" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout_name"
            android:background="@drawable/border_top">


            <RelativeLayout
                android:id="@+id/relative_layout_confirm_body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22.3dp"
                        android:layout_centerVertical="true">

                        <RelativeLayout
                            android:id="@+id/from_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp">

                            <TextView
                                android:id="@+id/origin_location_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pickup:"
                                android:textColor="#707070"
                                android:textSize="12sp"
                                app:fontFamily="@font/roboto"/>

                            <TextView
                                android:id="@+id/origin_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/origin_location_text"
                                android:hint="Pickup Location Name"
                                android:textColor="#416DF4"
                                android:textColorHint="#416DF4"
                                android:textSize="15sp"
                                app:fontFamily="@font/roboto"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/to_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/from_rl"
                            android:layout_marginTop="17dp">

                            <TextView
                                android:id="@+id/destination_location_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Destination:"
                                android:textColor="#707070"
                                android:textSize="12sp"
                                app:fontFamily="@font/roboto"/>

                            <TextView
                                android:id="@+id/destination_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/destination_location_text"
                                android:hint="Destination Location Name"
                                android:textColor="#416DF4"
                                android:textColorHint="#416DF4"
                                android:textSize="15sp"
                                app:fontFamily="@font/roboto"/>
                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/route"
                    android:layout_marginLeft="22.3dp"
                    android:layout_marginTop="17dp">

                    <TextView
                        android:id="@+id/text_seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of people:"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textColor="#707070"/>

                    <TextView
                        android:id="@+id/passenger_seat_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/text_seats"
                        android:hint="#"
                        android:textColor="#383838"
                        android:textColorHint="#383838"
                        android:textSize="15sp"
                        app:fontFamily="@font/roboto"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pn"
                    android:layout_marginLeft="22.3dp"
                    android:layout_marginTop="17dp">

                    <TextView
                        android:id="@+id/text_date_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carpool date:"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textColor="#707070" />

                    <TextView
                        android:id="@+id/date_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:hint="Date of carpool"
                        android:textColor="#383838"
                        android:textColorHint="#383838"
                        android:textSize="15sp"
                        app:fontFamily="@font/roboto"
                        android:layout_below="@id/text_date_calendar"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/calendar"
                    android:layout_marginLeft="22.3dp"
                    android:layout_marginTop="17dp">

                    <TextView
                        android:id="@+id/text_time_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carpool time:"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textColor="#707070" />


                    <TextView
                        android:id="@+id/time_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/text_time_calendar"
                        android:hint="Time of carpool"
                        android:textColor="#383838"
                        android:textColorHint="#383838"
                        android:textSize="15sp"
                        app:fontFamily="@font/roboto"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time"
                    android:layout_marginLeft="22.3dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="17dp">

                    <TextView
                        android:id="@+id/text_maximum_earnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maximum payment:"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textColor="#707070" />

                    <TextView
                        android:id="@+id/earnings_text_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_maximum_earnings"
                        android:hint="$"
                        android:textColor="#383838"
                        android:textColorHint="#383838"
                        android:textSize="15sp"
                        app:fontFamily="@font/roboto"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/earnings_text_confirm"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/text_maximum_earnings"
                        android:text="(CAD)"
                        android:textColor="#416DF4"
                        android:textSize="15sp"
                        app:fontFamily="@font/roboto"/>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rider_profile"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:background="@drawable/border_top"
            android:layout_alignParentBottom="true">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/phone_number_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="123-456-7890"
                        android:visibility="visible"
                        android:layout_centerVertical="true"
                        android:textColor="#767676"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <RelativeLayout
                        android:id="@+id/phone_icon"
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:background="@drawable/background_oval_unfilled_phone"
                        android:onClick="callNumber">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_phone"
                            android:tint="#416DF4" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_toRightOf="@+id/rl_phone"
                    android:background="@drawable/background_oval_unfilled_phone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="88dp">


                    <!--                <EditText-->
                    <!--                    android:visibility="invisible"-->
                    <!--                    android:id="@+id/text_message"-->
                    <!--                    android:layout_width="10dp"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_marginLeft="15dp"-->
                    <!--                    android:hint="Enter message here"-->
                    <!--                    android:textSize="12sp"-->
                    <!--                    android:inputType="textMultiLine"-->
                    <!--                    android:textColor="#484848"-->
                    <!--                    android:fontFamily="@font/roboto"-->
                    <!--                    android:textColorHint="#484848"/>-->

                    <ImageView
                        android:id="@+id/message_icon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:tint="#416DF4"
                        android:src="@drawable/ic_message"
                        android:onClick="smsSendMessage"/>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>