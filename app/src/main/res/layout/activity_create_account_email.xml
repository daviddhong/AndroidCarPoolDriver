<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_back_create_account_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_back"
                android:tint="#0A1C2A" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_one_create_account_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_back_create_account_email"
            android:layout_marginTop="128dp">

            <TextView
                android:id="@+id/text_row_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi"
                android:textSize="25sp"
                android:textColor="#262626"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

            <TextView
                android:id="@+id/user_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_row_one"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:textColor="#00574B"
                android:hint="Person's Name"
                android:textColorHint="#2B4F81"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_row_one"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:text="What is your email?"
                android:textColor="#262626"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_provide_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_one_create_account_email"
            android:layout_toRightOf="@+id/rl_back_create_account_email"
            android:layout_marginTop="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555B5B"
                android:text="Please provide your work or school email."
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_provide_email"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/rl_back_create_account_email">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2B4F81"
                android:text="Why work or school email?"
                android:textSize="15sp"
                app:fontFamily="@font/roboto"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/border_rectangle_unfilled_with_border"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/image_email_sign_up"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_email_24dp"
                android:tint="#262626"/>

            <EditText
                android:id="@+id/editText_email_login_create"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/image_email_sign_up"
                android:background="@android:color/transparent"
                android:hint="eg. carpool_driver@alumni.ubc.ca"
                android:inputType="textEmailAddress"
                android:textColor="#555B5B"
                android:textSize="15sp"
                app:fontFamily="@font/roboto"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/continue_sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="188dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background_rectangle_fill">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:text="Continue"
                android:textColor="#FFF"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>