<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_close_create_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_close"
                android:tint="#383838" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_close_create_account_name"
            android:layout_marginTop="128dp">

            <TextView
                android:id="@+id/text_row_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start by telling us"
                android:textSize="25sp"
                android:textColor="#383838"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_row_one"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:text="your name."
                android:textColor="#383838"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_provide_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_text"
            android:layout_marginRight="38dp"
            android:layout_toRightOf="@+id/rl_close_create_account_name"
            android:layout_marginTop="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#405DE6"
                android:text="The name has to be same as the name on your driver's license"
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/text_provide_email"
            android:layout_marginTop="40dp"
            android:id="@+id/sign_up_name"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/background_rectangle_fill_light"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/editText_first_name_create_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                android:hint="Enter First Name"
                android:inputType="textPersonName"
                android:textColor="#767676"
                android:textSize="15sp"
                app:fontFamily="@font/roboto"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sign_up_last_name"
            android:layout_below="@id/sign_up_name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/background_rectangle_fill_light"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/editText_last_name_create_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                android:hint="Enter Last Name"
                android:inputType="textPersonName"
                android:textColor="#767676"
                android:textSize="15sp"
                app:fontFamily="@font/roboto"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/continue_sign_up_name"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="188dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background_rectangle_fill">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:text="Continue"
                android:textColor="#FFF"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>