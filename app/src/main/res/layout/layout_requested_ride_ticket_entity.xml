<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/border_rectangle_unfilled">

        <RelativeLayout
            android:id="@+id/rl_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/calendar_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"
                android:tint="#78849E" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/calendar_icon"
                android:hint="Date"
                android:textColor="#2A2E43"
                android:textColorHint="#2A2E43"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@id/text_date"
                android:src="@drawable/ic_time"
                android:tint="#78849E" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/time_icon"
                android:hint="Time"
                android:textColor="#2A2E43"
                android:textColorHint="#2A2E43"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/passenger_number_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@id/text_time"
                android:src="@drawable/ic_seat"
                android:tint="#78849E" />

            <TextView
                android:id="@+id/text_passenger_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/passenger_number_image"
                android:hint="#"
                android:textColor="#2A2E43"
                android:textColorHint="#2A2E43"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/image_to_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_date_time"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/origin_ticket"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/border_oval_fill" />

            <RelativeLayout
                android:id="@+id/vert_two_ticket"
                android:layout_width="3dp"
                android:layout_height="58dp"
                android:layout_below="@id/origin_ticket"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/path_solid" />

            <ImageView
                android:id="@+id/destination"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_below="@id/vert_two_ticket"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:src="@drawable/border_oval_fill" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_request_new_ride_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_date_time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/image_to_from">

            <TextView
                android:id="@+id/text_pickup_stable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup location"
                android:textColor="#78849E"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_origin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_pickup_stable"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:hint="Pickup Location Name"
                android:textColor="#2A2E43"
                android:textColorHint="#2A2E43"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_request_new_ride_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout_request_new_ride_origin"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/image_to_from">

            <TextView
                android:id="@+id/text_destination_stable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination location"
                android:textColor="#78849E"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_destination"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_destination_stable"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:hint="Destination Location Name"
                android:textColor="#2A2E43"
                android:textColorHint="#2A2E43"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>