<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_back_create_account_drivers_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_back"
                android:tint="#383838" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_back_create_account_drivers_license"
            android:layout_marginTop="128dp">

            <TextView
                android:id="@+id/text_row_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please take a picture of"
                android:textSize="25sp"
                android:textColor="#383838"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

            <TextView
                android:id="@+id/yourdirverlicence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_row_one"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:text="your driver's license."
                android:textColor="#383838"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>


            <TextView
                android:id="@+id/confirming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yourdirverlicence"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="This is just for us confirming"
                android:textColor="#405DE6"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

            <TextView
                android:id="@+id/ident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirming"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="your identification."
                android:textColor="#405DE6"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/continue_sign_up_id_picture"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="188dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background_rectangle_fill"
            android:backgroundTint="#405DE6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:text="Continue"
                android:textColor="#FFF"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>