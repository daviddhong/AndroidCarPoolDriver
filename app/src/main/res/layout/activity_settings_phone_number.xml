<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <RelativeLayout
                android:id="@+id/rl_back_settings_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="#262626" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#262626"
                app:fontFamily="@font/roboto_bold"/>

            <RelativeLayout
                android:id="@+id/rl_settings_save_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="17sp"
                    android:textColor="#00574B"
                    app:fontFamily="@font/roboto"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_phone_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_rectangle_unfilled_with_border"
            android:layout_marginTop="88dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <RelativeLayout
                android:id="@+id/image_phone_number"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/background_oval_unfilled_phone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_phone"
                    android:tint="#00574B"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/editText_phone_number_change_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/image_phone_number"
                android:background="@android:color/transparent"
                android:hint="Phone number"
                android:inputType="phone"
                android:textColor="#555B5B"
                android:textSize="15sp"
                app:fontFamily="@font/roboto"/>
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>