<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">

        <RelativeLayout
            android:id="@+id/rl_back_button_post_new_carpool_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_back"
                android:tint="#383838"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_back_button_post_new_carpool_two"
            android:layout_marginTop="128dp">

            <TextView
                android:id="@+id/text_row_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How many people do you"
                android:textSize="25sp"
                android:textColor="#383838"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_row_one"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:text="want to carpool?"
                android:textColor="#383838"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_picker_pn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/pn_picker"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:np_dividerColor="#383838"
                app:np_dividerDistance="58dp"
                app:np_height="180dp"
                app:np_width="64dp"
                app:np_max="11"
                app:np_min="1"
                app:np_selectedTextColor="#383838"
                app:np_selectedTextSize="17sp"
                app:np_textColor="#383838"
                app:np_textSize="17sp"
                app:np_value="1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/next_carpool_seat_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="158dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="38dp"
            android:layout_marginLeft="38dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/background_rectangle_fill"
                android:backgroundTint="#405DE6">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_centerInParent="true"
                    android:text="Continue"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    app:fontFamily="@font/roboto_bold"/>


            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>