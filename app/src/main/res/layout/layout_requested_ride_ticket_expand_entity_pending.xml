<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_layout_ic_back_activity_confirm_post"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/back_confirm"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="#262626" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_confirm_body_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout_ic_back_activity_confirm_post"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/border_rectangle_unfilled_with_border">

            <RelativeLayout
                android:id="@+id/rl_header_ticket_post"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Carpool Request"
                    android:textColor="#262626"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/roboto_bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/route_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_header_ticket_post">

                <RelativeLayout
                    android:id="@+id/locations_post"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:id="@+id/from_post"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_from" />

                    <RelativeLayout
                        android:id="@+id/path_post"
                        android:layout_width="2dp"
                        android:layout_height="38dp"
                        android:layout_below="@id/from_post"
                        android:layout_centerInParent="true"
                        android:background="@drawable/path_solid">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_below="@id/path_post"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_solid_to" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/locations_post"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true">

                    <RelativeLayout
                        android:id="@+id/from_rl_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/origin_location_text_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickup location"
                            android:textColor="#262626"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/roboto_bold"/>

                        <TextView
                            android:id="@+id/origin_data_post"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/origin_location_text_post"
                            android:hint="Pickup Location Name"
                            android:textColor="#555B5B"
                            android:textColorHint="#555B5B"
                            android:textSize="12sp"
                            app:fontFamily="@font/roboto"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/to_rl_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/from_rl_post"
                        android:layout_marginTop="17dp">

                        <TextView
                            android:id="@+id/destination_location_text_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Destination location"
                            android:textColor="#262626"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/roboto_bold"/>

                        <TextView
                            android:id="@+id/destination_data_post"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/destination_location_text_post"
                            android:hint="Destination Location Name"
                            android:textColor="#555B5B"
                            android:textColorHint="#555B5B"
                            android:textSize="12sp"
                            app:fontFamily="@font/roboto"/>
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pn_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/route_post"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/image_seat_post"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person"
                    android:tint="#0A1C2A"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_seat_post"
                    android:hint="#"
                    android:textColor="#555B5B"
                    android:textColorHint="#555B5B"
                    android:textSize="12sp"
                    app:fontFamily="@font/roboto"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/calendar_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pn_post"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/image_calendar_post"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="#0A1C2A"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_calendar_post"
                    android:hint="Date of carpool"
                    android:textColor="#555B5B"
                    android:textColorHint="#555B5B"
                    android:textSize="12sp"
                    app:fontFamily="@font/roboto"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendar_post"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/image_time_post"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_time"
                    android:tint="#0A1C2A"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_time_post"
                    android:hint="Time of carpool"
                    android:textColor="#555B5B"
                    android:textColorHint="#555B5B"
                    android:textSize="12sp"
                    app:fontFamily="@font/roboto"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_post"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:id="@+id/image_monetization_post"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_monetization"
                    android:tint="#262626"/>

                <TextView
                    android:id="@+id/earnings_text_confirm_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_monetization_post"
                    android:hint="Estimated earnings"
                    android:textColor="#555B5B"
                    android:textColorHint="#555B5B"
                    android:textSize="12sp"
                    app:fontFamily="@font/roboto"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/earnings_text_confirm_post"
                    android:layout_marginLeft="10dp"
                    android:text="(CAD)"
                    android:textColor="#555B5B"
                    android:textSize="12sp"
                    app:fontFamily="@font/roboto"/>


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/confirm_footer_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/relative_layout_confirm_body_post">

            <RelativeLayout
                android:id="@+id/request_cancel_carpool_post"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="39dp"
                android:layout_marginRight="39dp"
                android:background="@drawable/background_rectangle_fill">

                <TextView
                    android:id="@+id/request_cancel_button_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Request to Pickup Rider"
                    android:textColor="#FFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/roboto_bold"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>