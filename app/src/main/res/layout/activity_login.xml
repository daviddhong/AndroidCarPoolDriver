<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_close_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_close"
                android:tint="#383838"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/enter_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/rl_close_login"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
                android:id="@+id/enter_email"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/background_rectangle_fill_light">

                <ImageView
                    android:id="@+id/image_email_login"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_email_24dp"
                    android:tint="#383838"/>

                <EditText
                    android:id="@+id/editText_email_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/image_email_login"
                    android:background="@android:color/transparent"
                    android:hint="Enter email"
                    android:inputType="textEmailAddress"
                    android:textColor="#767676"
                    android:textSize="15sp"
                    app:fontFamily="@font/roboto"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_below="@id/enter_email"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_rectangle_fill_light">

                <ImageView
                    android:id="@+id/image_lock_login"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_lock_24dp"
                    android:tint="#383838"/>

                <EditText
                    android:id="@+id/editText_password_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/image_lock_login"
                    android:background="@android:color/transparent"
                    android:hint="Enter password"
                    android:inputType="textPassword"
                    android:textColor="#767676"
                    android:textSize="15sp"
                    app:fontFamily="@font/roboto"/>


            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@+id/enter_account"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="58dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/background_rectangle_fill">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sign in"
                android:textColor="#FFF"
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_make_account_login"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/button_login"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_rectangle_blue_border">

            <TextView
                android:id="@+id/textView_make_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:layout_centerInParent="true"
                android:textColor="#416DF4"
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView_forgot_password"
            android:layout_width="wrap_content"
            android:layout_below="@id/relative_layout_make_account_login"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="Forgot password?"
            android:textColor="#405DE6"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto_bold"/>

        <TextView
            android:id="@+id/textView_resend_verification_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/relative_layout_make_account_login"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="Resend verification email"
            android:textColor="#262626"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:fontFamily="@font/roboto_bold"/>

    </RelativeLayout>


</RelativeLayout>
