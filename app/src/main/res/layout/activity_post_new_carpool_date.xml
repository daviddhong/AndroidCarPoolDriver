<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A1C2A">

        <RelativeLayout
            android:id="@+id/rl_back_button_post_new_carpool_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_back"
                android:tint="#FFF" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:layout_toRightOf="@+id/rl_back_button_post_new_carpool_date">

            <TextView
                android:id="@+id/text_row_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What day would you"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_row_one"
                android:layout_marginTop="10dp"
                android:text="like to carpool?"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_picker_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/rl_picker_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/month_picker"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:np_dividerColor="#FFF"
                    app:np_dividerDistance="58dp"
                    app:np_height="180dp"
                    app:np_selectedTextColor="#FFF"
                    app:np_selectedTextSize="17sp"
                    app:np_textColor="#FFF"
                    app:np_textSize="17sp"
                    app:np_width="64dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_picker_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/rl_picker_month">

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/day_picker"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:np_dividerColor="#FFF"
                    app:np_dividerDistance="58dp"
                    app:np_selectedTextColor="#FFF"
                    app:np_selectedTextSize="17sp"
                    app:np_textColor="#FFF"
                    app:np_textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/rl_picker_day">

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/year_picker"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:np_dividerColor="#FFF"
                    app:np_dividerDistance="58dp"
                    app:np_selectedTextColor="#FFF"
                    app:np_selectedTextSize="17sp"
                    app:np_textColor="#FFF"
                    app:np_textSize="17sp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="158dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="58dp"
            android:layout_marginLeft="58dp">


            <RelativeLayout
                android:id="@+id/next_carpool_date_post"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_rectangle_unfilled">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_centerInParent="true"
                    android:text="Select carpool time"
                    android:textColor="#0A1C2A"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_forward" />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>