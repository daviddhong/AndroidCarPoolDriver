<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_back_settings_password_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_back"
                android:tint="#383838" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timetochoosepassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_back_settings_password_account"
            android:layout_marginTop="128dp">

            <TextView
                android:id="@+id/text_row_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time to choose your"
                android:textSize="25sp"
                android:textColor="#383838"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_row_one"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:text="password to sign in with."
                android:textColor="#383838"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/password_create_login"
            android:layout_below="@+id/timetochoosepassword"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/background_rectangle_hof_border">

            <ImageView
                android:id="@+id/image_lock_sign_up_pw"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_lock_24dp"
                android:tint="#383838"
                android:rotation="10"/>

            <EditText
                android:id="@+id/editText_password_sign_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/image_lock_sign_up_pw"
                android:background="@android:color/transparent"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:textColor="#767676"
                android:textSize="15sp"
                app:fontFamily="@font/roboto"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/password_create_login"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_rectangle_hof_border">

            <ImageView
                android:id="@+id/image_lock_sign_up"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_lock_24dp"
                android:tint="#383838"
                android:rotation="350"/>

            <EditText
                android:id="@+id/editText_password_sign_up_confirm_pw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/image_lock_sign_up"
                android:background="@android:color/transparent"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:textColor="#767676"
                android:textSize="15sp"
                app:fontFamily="@font/roboto"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/continue_sign_up_password"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="188dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background_rectangle_fill"
            android:backgroundTint="#405DE6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:text="Continue"
                android:textColor="#FFF"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_bold"/>


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>