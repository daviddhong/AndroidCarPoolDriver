<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/border_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="Your Carpool"
                android:textColor="#4264fb"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/profile_your_carpool"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/notification_your_carpool"
                android:src="@drawable/ic_account"
                android:tint="#4264fb" />

            <ImageView
                android:id="@+id/notification_your_carpool"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_outline_notifications"
                android:tint="#c6d2e1" />


        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_your_carpool"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/relative_layout_toolbar"
            android:background="#FFF"
            app:tabSelectedTextColor="#4264fb"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="#c6d2e1">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_item_upcoming_carpool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Upcoming Carpool" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_item_carpool_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Carpool History" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_your_carpool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_layout_your_carpool"/>

    </RelativeLayout>

</LinearLayout>