<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_back_settings_verify_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_back"
                android:tint="#0A1C2A" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_verify_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_back_settings_verify_email"
            android:layout_marginTop="128dp">

            <TextView
                android:id="@+id/text_row_one_settings_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter the verification"
                android:textSize="25sp"
                android:textColor="#0A1C2A"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_row_one_settings_verify"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:text="code sent to your inbox."
                android:textColor="#0A1C2A"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_email_verification_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_rectangle_unfilled_with_border"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <EditText
                android:id="@+id/editText_settings_email_verification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                android:hint="Enter verification code"
                android:inputType="textNoSuggestions"
                android:textColor="#0A1C2A"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/continue_settings_email_verification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="188dp"
            android:layout_marginRight="58dp"
            android:layout_marginLeft="58dp"
            android:background="@drawable/background_rectangle_fill">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:text="Continue"
                android:textColor="#FFF"
                android:textStyle="bold"/>


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>